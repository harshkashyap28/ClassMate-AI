# === Google OAuth (Used for Assignment Reminders) ===
REACT_APP_GOOGLE_CLIENT_ID=your_google_oauth_client_id_here

# === Google API Keys ===
REACT_APP_GOOGLE_API_KEY=your_google_api_key_for_summarizer_or_quiz

# === Face++ API (Used in Attendance Verification) ===
FACE_API_KEY=your_faceplusplus_api_key
